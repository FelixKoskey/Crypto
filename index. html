<script>
var currentUser = null;
var users = {};

function showLayer(id) {
    document.querySelectorAll('.layer').forEach(l => l.classList.remove('active'));
    document.getElementById(id).classList.add('active');
}

function showAlert(id, msg, type) {
    var el = document.getElementById(id);
    el.textContent = msg;
    el.className = 'alert alert-' + type + ' show';
    setTimeout(() => el.classList.remove('show'), 4000);
}

function showModal(id) {
    document.getElementById(id).classList.add('active');
}

function closeModal(id) {
    document.getElementById(id).classList.remove('active');
}

function handleSignup(e) {
    e.preventDefault();
    var name = document.getElementById('signupName').value;
    var email = document.getElementById('signupEmail').value;
    var pass = document.getElementById('signupPassword').value;
    var confirm = document.getElementById('signupConfirm').value;
    
    if (pass !== confirm) {
        showAlert('signupAlert', 'Passwords do not match!', 'error');
        return;
    }
    
    if (users[email]) {
        showAlert('signupAlert', 'Email already registered!', 'error');
        return;
    }
    
    users[email] = { name: name, email: email, password: pass, balance: 10000 };
    localStorage.setItem('cryptoUsers', JSON.stringify(users));
    
    showAlert('signupSuccess', 'Account created!', 'success');
    setTimeout(() => {
        currentUser = users[email];
        showLayer('dashboardLayer');
    }, 1500);
}

function handleLogin(e) {
    e.preventDefault();
    var email = document.getElementById('loginEmail').value;
    var pass = document.getElementById('loginPassword').value;
    
    if (!users[email]) {
        showAlert('loginAlert', 'Account not found!', 'error');
        return;
    }
    
    if (users[email].password !== pass) {
        showAlert('loginAlert', 'Wrong password!', 'error');
        return;
    }
    
    currentUser = users[email];
    showLayer('dashboardLayer');
    document.getElementById('balance').textContent = '$' + currentUser.balance.toFixed(2);
}

function logout() {
    if (confirm('Logout?')) {
        currentUser = null;
        showLayer('homeLayer');
    }
}

function selectPayment(method) {
    var amount = document.getElementById('depositAmount').value;
    closeModal('depositModal');
    
    if (method === 'mpesa') {
        alert('M-PESA PAYMENT\n\nTill: 7500474\nAmount: KSh ' + (amount * 130) + '\n\nSend payment then click OK');
        confirmDeposit(parseFloat(amount));
    } else {
        alert('CRYPTO PAYMENT\n\nAddress: TK4rUz6TUEd7zCWeuiX5R47pSNdPswJnAc\nAmount: $' + amount + '\n\nSend USDT then click OK');
        confirmDeposit(parseFloat(amount));
    }
}

function confirmDeposit(amount) {
    if (currentUser) {
        currentUser.balance += amount;
        document.getElementById('balance').textContent = '$' + currentUser.balance.toFixed(2);
        alert('‚úÖ DEPOSIT CONFIRMED!\n\n$' + amount + ' added to your account');
    }
}

// Load users from localStorage
try {
    var stored = localStorage.getItem('cryptoUsers');
    if (stored) users = JSON.parse(stored);
} catch(e) {}
</script>

